<head>
  <style>
    .body{
      background-color: #FFF0EB;
    }

    .card {
      border: 1px solid #ccc;
      border-radius: 10px;
      background-color: #FFFFFF;
      width: 200px;
      padding: 0;
      padding-top: 10px;
      aspect-ratio: 1; 
      transition: transform 0.2s ease-in-out;
    }
    
    .card:hover {
      transform: scale(1.05); 
      border-color: #4CAF50; 
    }
  </style>
</head>

<body class="body">
  <div class="container py-5">
    <div class="row row-cols-lg-5 g-4">
      <% @surveys.each do |survey| %>
        <div class="col my-4">
          <div class="card h-100 text-center" style="cursor: pointer;" onclick="location.href='<%= result_path(survey) %>';">
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
              <h5 class="card-title" style="color:"><%= survey.title %></h5>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</body>
